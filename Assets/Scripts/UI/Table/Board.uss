.slot {
    width: 100%;
    height: 98%;
    margin: 5px;
    border-top-radius: 1px;
    border-color: rgb(0, 0, 0);
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
    margin-left: 1%;
    margin-right: 1%;
    margin-top: 2%;
    margin-bottom: 2%;
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
    background-color: rgba(255, 255, 255, 0.23);
    align-items: center;
    justify-content: center;
}

.slotsContainer {
    flex-direction: row;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
}

.Card {
    width: 100%;
    height: 100%;
    position: relative;
    left: auto;
    top: auto;
    border-radius: 30px;
    justify-content: center;
    align-items: center;
    max-width: 254px;
    max-height: 362px;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
}

.Board {
    width: 100%;
    height: 100%;
    display: flex;
}

.Card:hover {
    -unity-background-image-tint-color: rgba(255, 255, 255, 255);
    border-left-color: rgba(59, 205, 255, 255);
    border-right-color: rgba(59, 205, 255, 255);
    border-top-color: rgba(59, 205, 255, 255);
    border-bottom-color: rgba(59, 205, 255, 255);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    max-width: 254px;
    max-height: 362px;
}
